{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "paths": {
            "@config/*": [
                "config/*"
            ],
            "@models/*": [
                "models/*"
            ],
            "@controllers/*": [
                "controllers/*"
            ],
            "@services/*": [
                "services/*"
            ],
            "@middlewares/*": [
                "middlewares/*"
            ],
            "@utils/*": [
                "utils/*"
            ],
            "@types/*": [
                "types/*"
            ]
        },
        /* a√±ade esto: */
    "typeRoots": ["./src/types", "./node_modules/@types"]
    },
    
    "include": [
        "src/**/*",
        "src/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "tests"
    ]
}